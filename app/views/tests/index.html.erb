<h1>Tests</h1>

<table>
  <tr>
    <th>Test</th>
    <th>Level</th>
    <th>Amount of question</th>
    <th>Action</th>
  </tr>

  <%@tests.each do |test|%>
  <tr>
    <td><%= test.title %></td>
    <td><%= test.level %></td>
    <td><%= test.questions.count %></td>
    <td><%= link_to 'Перейти к тесту', test_path(test) %></td>
    <%end%>
  </tr>

</table>
