<h1>Passing the <%= @test_passage.test.title %> test</h1>

<% current_question_body = @test_passage.current_question.body %>
<% current_test_questions = @test_passage.test.questions %>

<b>
  Вопрос <%= current_test_questions.pluck(:body).index(current_question_body) + 1 %>/
  <%= current_test_questions.count %><br>
  <%= current_question_body %>
</b>

<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :answer,
  include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>
  <%= form.submit 'Next' %>
<% end %>
