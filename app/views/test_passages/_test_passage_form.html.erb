<%= form_with url: test_passage_path(@test_passage), local: true, method: :put do |form| %>
  <%= form.collection_check_boxes :answer_ids, @test_passage.current_question.answers, :id, :answer,
  include_hidden: false do |b| %>
    <p>
      <%= b.check_box id: "answer_ids_#{b.object.id}" %>
      <%= b.label %>
    </p>
  <% end %>
  <p><%= link_to t('user.gists.new'),  gists_path(test_passage_id: @test_passage.id), method: :post %></p>
  <p><%= form.submit t('user.test_passages.next') %></p>
<% end %>
