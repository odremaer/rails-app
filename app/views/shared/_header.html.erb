<% if logged_in? %>
  <%= link_to "TestGuru", tests_path, class: "nav user" %>
  <p class="nav user">Welcome, <b><%= current_user.email %></b> Guru</p>
  <%= link_to "Log out", logout_path, method: :delete, class: "nav user" %>
<% else %>
  <p class="nav user">Welcome, future Guru</p>
  <%= link_to "Sign up", signup_path, class: "nav user" %>
  <%= link_to "Log in", login_path, class: "nav user" %>
<% end %>
