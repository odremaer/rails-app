<p>
  <strong><%= I18n.t('title') %>: <%=@test.title%></strong>
</p>

<p>
  <strong><%= I18n.t('level') %>: <%= @test.level %></strong>
</p>

<% if @test.without_questions? %>
  <strong>Вопросов в тесте нет</strong>
<% else %>
  <strong>Вопросы теста:</strong>
  <table>
    <tr>
      <th><%= I18n.t('question') %></th>
      <th colspan="3"><%= I18n.t('action') %></th>
    </tr>

    <%= render @test.questions %>

  </table>
<% end %>

<p><%= link_to I18n.t('admin.questions.new'), new_admin_test_question_path(@test) %></p>
<p><%= link_to I18n.t('all_tests'), admin_tests_path %></p>
